<h1><%= @list.name %></h1>
<h2>Bookmarks</h2>
<%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"%>
<%= link_to 'Back to lists', lists_path, class: ""%>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
  <li class="list-group-item">
    <h3><%= bookmark.movie.title %></h3>
    <%= image_tag bookmark.movie.poster_url %>
    <p><%= bookmark.comment %></p>
    <%= link_to "Delete", bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </li>
  <% end %>
</ul>
